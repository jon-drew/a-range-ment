<!DOCTYPE html>
<html>
<head>
  <title>Event Invite</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <link rel="stylesheet" href="/styles/invitee.css" type="text/css" />
  <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
  <script type="text/javascript" src="/scripts/parti.js"></script>
</head>
<body style="background-image: url(/images/IMG_1817.PNG); background-attachment: fixed;">
  <center>
    <div class="jumbotron" style="background-color: rgb(145, 212, 197)">
   <h2>You're invited !!</h2>
 </div>
    <section class="invitation" style="font-family: 'Fjalla One', sans-serif;font-size: 20px">
      <form id= "invi-details">
        <table class="table table-hover" style="display:inline">
        <tbody>
          <tr>
            <td><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>
            </td>
            <td>Event</td>
            <td id="event-title"><%= event_title %></td>
          </tr>
          <tr>
            <td><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span>
            </td>
            <td>Invitor</td>
            <td><%= invitor_name %></td>
          </tr>
          <tr>
            <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </td>
            <td>Invitor's Email</td>
            <td id="invitor-email"><%= invitor_email %></td>
          </tr>
            <tr>
            <td><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </td>
            <td>Event Details</td>
            <td><%= event_description %></td>
          </tr>
            <tr>
            <td><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
            </td>
            <td>Location</td>
            <td><%= event_location %></td>
          </tr>
        </tbody>
      </table>

    <div class="form-group">
      <h3><span class="glyphicon glyphicon-time" aria-hidden="true"></span>Select your availability</h3>
    <table id="time-table" class="table" style="display:inline;">
      <thead>
        <tr>
          <th>Start Time</th>
          <th>End Time</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="table-body">
        <% for (var i in time_slots) { %>
        <tr class="time-row">
          <td id="start-time"><%= time_slots[i].start_time %></td>
          <td id="end-time"><%= time_slots[i].end_time %></td>
          <td><input class=".check-box" type="checkbox"></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    </div>
    <div class="form-inline">
  <div class="form-group">
    <label for="Name2">Name</label>
    <input type="text" class="form-control" id="part-name" placeholder="Jane Doe">
  </div>
  <div class="form-group">
    <label for="Email2">Email</label>
    <input type="email" class="form-control" id="part-email" placeholder="jane.doe@example.com">
  </div>
  <button id="invi-submit" type="input" class="btn btn-primary">Accept invitation</button>
</div>
</form>
    </section>
  </center>
</body>
</html>
